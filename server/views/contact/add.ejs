<!-- header -->
<% include ../partials/header.ejs %>

<!-- main navigation -->
<% include ../partials/navbar.ejs %>


<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><% title %></h1>


            <form class="form" method="POST">

                <div class="form-group">
                    <lable for="contactNameTextField"> Contact Name</lable>
                    <input type="text" class="form-control"
                    id="contactNameTextField"
                    placeholder="Enter the Contact name"
                    name="contactName" 
                    required >
                </div>

                <div class="form-group">
                    <lable for="contactNumberTextField"> Contact Number</lable>
                    <input type="text" class="form-control"
                    id="contactNumberTextField"
                    placeholder="Enter the Contact Number"
                    name="contactNumber" 
                    required >
                </div>

                <div class="form-group">
                    <lable for="emailTextField"> Email Adress </lable>
                    <input type="email" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the Contact Email Adress"
                    name="emailAddress" 
                    required >
                </div>



                <button class="btn btn-primary btn-sm" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                    <a href="/contact-list" class="btn btn-warning btn-sm">
                        <i class="fas fa-undo"></i> Cancel </a>
            </form>
        </div>
    </div>
</div>


<!-- footer -->
<% include ../partials/footer.ejs %>