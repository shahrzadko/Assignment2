<!-- header -->
<% include ../partials/header.ejs %>

<!-- main navigation -->
<% include ../partials/navbar.ejs %>


<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><% title %></h1>


            <form class="form" method="POST">

                <div class="form-group">
                    <lable for="nameTextField"> Book Title</lable>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Book title"
                    name="name" 
                    value="<%= book.name %>"
                    required >
                </div>

                <div class="form-group">
                    <lable for="authorTextField">Author</lable>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter the Book's Author"
                    name="author" 
                    value="<%= book.author %>"
                    required >
                </div>

                <div class="form-group">
                    <lable for="publishedTextField"> Year </lable>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter the Year of Publication"
                    name="published" 
                    value="<%= book.published %>"
                    required >
                </div>

                <div class="form-group">
                    <lable for="descriptionTextArea"> Description </lable>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter a Brief Bescription of the Book"
                    name="description" 
                    required>
                    <%= book.description %>
                    </textarea>
                </div>

                <div class="form-group">
                    <lable for="priceTextField">Price</lable>
                    <input type="number" class="form-control"
                    id="priceTextField"
                    placeholder="Enter the Book's Price"
                    name="price" 
                    value="<%= book.price %>"
                    required >
                </div>

                <button class="btn btn-primary btn-sm" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                    <a href="/book-list" class="btn btn-warning btn-sm">
                        <i class="fas fa-undo"></i> Cancel </a>
            </form>
        </div>
    </div>
</div>


<!-- footer -->
<% include ../partials/footer.ejs %>