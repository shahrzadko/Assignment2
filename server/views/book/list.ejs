<!-- header -->
<% include ../partials/header.ejs %>

<!-- main navigation -->
<% include ../partials/navbar.ejs %>

<% if(title == "Book List") { %>
<main class="container">
<div class="row">
   <div class="col-md-offset-1 col-md-8">
      <h1><% title %></h1>

      <% if(typeof displayName == 'string' && displayName) {%>
      <a href="/book-list/add" class="btn btn-primary" role="button">
      <i class="fas fa-plus-circle"></i> Add a Book</a>
      <% } %>
      <br>
      <table class="table table-boardered table-striped table-hover">
      <tr class="d-flex">
         <% if(typeof displayName == 'string' && displayName) {%>
               <th class="text-center col-1">Name</th>
               <th class="text-center col-1">Author</th>
               <th class="text-center col-1">Published</th>
               <th class="text-center col-4">description</th>
               <th class="text-center col-1">Price</th>
               <th class="text-center col-2"></th>
               <th class="text-center col-2"></th>

         <%} else {%>
               <th class="text-center col-1">Name</th>
               <th class="text-center col-1">Author</th>
               <th class="text-center col-1">Published</th>
               <th class="text-center col-6">description</th>
               <th class="text-center col-1">Price</th>
         <%}%>
      </tr>
       
     
         <% for (let count = 0; count < BookList.length; count++) { %>
            <tr class="d-flex">
               <% if(typeof displayName == 'string' && displayName) {%>
                  <td class="text-center col-1"><%= BookList[count].name %></td>
                  <td class="text-center col-1"><%= BookList[count].author %></td>
                  <td class="text-center col-1"><%= BookList[count].published %></td>
                  <td class="text-center col-4"><%= BookList[count].description%></td>
                  <td class="text-center col-1"><%= BookList[count].price %></td>
                  <td class="text-center col-2">
                     <a href="/book-list/edit/<%= BookList[count]._id %>" class="btn btn-primary btn-sm" >
                        <i class="fas fa-pencil-alt"></i> Edit</a>
                  </td>
                  <td class="text-center col-2">
                     <a href="/book-list/delete/<%= BookList[count]._id %>" class="btn btn-danger btn-sm" >
                        <i class="fas fa-trash-alt"></i> Delete</a>
                  <%} else {%>
                     <td class="text-center col-1"><%= BookList[count].name %></td>
                     <td class="text-center col-1"><%= BookList[count].author %></td>
                     <td class="text-center col-1"><%= BookList[count].published %></td>
                     <td class="text-center col-6"><%= BookList[count].description%></td>
                     <td class="text-center col-1"><%= BookList[count].price %></td>
                  <%}%>
                  </td>
            </tr>
         <% } %>
   </table>
   </div>
</div>
 
</main>

<% } %>

<!-- footer -->
<% include ../partials/footer.ejs %>